@page
@{
    ViewData["Title"] = "Page2";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Page2</h2>

@(Html.DevExtreme().DataGrid<WebApplication4.Model.Student>()
    .DataSource(ds => ds.Mvc()
        .Controller("StudentsController2")
        .LoadAction("Get")
        .UpdateAction("Put")
        .Key("StudentID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.StudentID);

        columns.AddFor(m => m.StudentName);

        columns.AddFor(m => m.DateOfBirth);

        columns.AddFor(m => m.Photo);

        columns.AddFor(m => m.Height);

        columns.AddFor(m => m.Weight);
    })
    .Editing(e => e
        .AllowUpdating(true)
    )
)
