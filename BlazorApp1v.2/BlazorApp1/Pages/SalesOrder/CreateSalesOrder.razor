@page "/CreateSalesOrder"
@inject HttpClient http
@using ModelClass.Model
<h3>Create SalesOrder</h3>
<div>
    
    <button type="button" @onclick="PostSalesOrder">Post Save Order</button>



</div>


@code {

    ModelClass.Model.SalesOrder[] salesorders { get; set; }

    async Task PostSalesOrder()
    {

        var salesorder = new ModelClass.Model.SalesOrder();

        salesorder.SalesOrderID = 1;
        salesorder.ShipMethod = "ABCDE";
        salesorder.ShipDate = new DateTime(2020, 10, 2);

        await http.PostJsonAsync("https://wacrmwebservice.azurewebsites.net/api/SalesOrderHeaders",salesorder);

    }


}
