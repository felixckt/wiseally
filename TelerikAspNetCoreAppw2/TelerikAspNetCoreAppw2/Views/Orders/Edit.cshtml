@model TelerikAspNetCoreAppw2.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

    <h4>Order</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" id="OrderForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderID" />
                <div class="form-group">
                    <label asp-for="OrderDate"></label>
                    <kendo-datetimepicker for="OrderDate" />
                    <span asp-validation-for="OrderDate" class="text-danger k-invalid-msg" data-for="OrderDate"></span>
                 </div>
                <div class="form-group">
                    <label asp-for="CustomerID"></label>
                    <kendo-numerictextbox for="CustomerID" />
                    <span asp-validation-for="CustomerID" class="text-danger k-invalid-msg" data-for="CustomerID"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerName"></label>
                    <input asp-for="CustomerName" class="k-textbox" />
                    <span asp-validation-for="CustomerName" class="text-danger k-invalid-msg" data-for="CustomerName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShipCountry"></label>
                    <input asp-for="ShipCountry" class="k-textbox" />
                    <span asp-validation-for="ShipCountry" class="text-danger k-invalid-msg" data-for="ShipCountry"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShipCity"></label>
                    <input asp-for="ShipCity" class="k-textbox" />
                    <span asp-validation-for="ShipCity" class="text-danger k-invalid-msg" data-for="ShipCity"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="k-button k-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="k-button">Back to List</a>
    </div>

    <script>
        $(document).ready(function () {
            $("#OrderForm").kendoValidator({
                // You can define your custom rules here:
                //rules: {}
            });
        })
    </script>
